---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ item.name }}
  namespace: cert-manager
spec:
  acme:
    server: {{ item.server }}
    email: {{ item.email }}
    privateKeySecretRef:
      name: {{ item.name }}
    solvers:
      - dns01:
          cloudflare:
            email: {{ item.email }}
            apiTokenSecretRef:
              name: cloudflare-token-secret
              key: cloudflare-token
        selector:
          dnsZones:
            - "{{ cm_domain }}"